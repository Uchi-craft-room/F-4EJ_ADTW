<?xml version="1.0"?>

<PropertyList>
  <!-- horizontal situation indicator -->
  <name>HSI</name>
  <path>A-10-HSI.ac</path>

  <animation>
    <type>noshadow</type>
    <object-name>course-deviation-indi</object-name>
    <object-name>bearing-needle-1</object-name>
    <object-name>bearing-needle-2</object-name>
    <object-name>heading-marker</object-name>
    <object-name>ILS</object-name>
    <object-name>NAV</object-name>
    <object-name>TCN</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>HSI-compass-card</object-name>
    <object-name>bearing-needle-1</object-name>
    <object-name>bearing-needle-2</object-name>
    <object-name>HSI-course-card</object-name>
    <object-name>HSI-course-card1</object-name>
    <object-name>course-deviation-indi</object-name>
    <object-name>to-from-to</object-name>
    <object-name>to-from-from</object-name>
    <object-name>heading-marker</object-name>
    <object-name>llz-flag</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
  
    <property>orientation/heading-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation> 

<!--BEARING NEEDLE 2      HDG bug-->
  <animation>
    <type>rotate</type>
    <object-name>bearing-needle-2</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
   
   <property>instrumentation/nav/heading-deg</property >
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!--BEARING NEEDLE 1      HDG bug-->
  <animation>
    <type>rotate</type>
    <object-name>bearing-needle-1</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
   
   <property>instrumentation/tacan/indicated-bearing-true-deg</property >
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!--HEADING MARKER -->
  <animation>
    <type>rotate</type>
    <object-name>heading-marker</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
   
   <property>autopilot/settings/heading-bug-deg</property >
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <!--COURSE-->
    <animation>
    <type>rotate</type>
   <object-name>HSI-course-card</object-name>
   <object-name>HSI-course-card1</object-name>
    <object-name>course-deviation-indi</object-name>
    <object-name>to-from-to</object-name>
    <object-name>to-from-from</object-name>
    <object-name>llz-flag</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
   
   <property>instrumentation/nav/radials/selected-deg</property >
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
     <object-name>course-deviation-indi</object-name>
     <property>instrumentation/nav/heading-needle-deflection</property>
        <interpolation>
            <entry><ind>-10.0</ind><dep>-0.0172</dep></entry>
            <entry><ind>0.0</ind><dep>0.0</dep></entry>
            <entry><ind>10.0</ind><dep>0.0172</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.0</z-m>
        </center>
  </animation>
  
  <animation>
        <type>select</type>
        <object-name>to-from-to</object-name>
        <condition>
            <property>instrumentation/nav/to-flag</property>
        </condition>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>to-from-from</object-name>
        <condition>
            <property>instrumentation/nav/from-flag</property>
        </condition>
    </animation>


<!--Dme miles Flag-->
  <animation>
    <type>select</type>
    <object-name>miles-flag</object-name>
    <condition>
       <and>
        <not>
        <property>instrumentation/tacan/in-range</property>
        </not>
        <not>        
          <property>instrumentation/nav/in-range</property>
        </not>
        <not>        
          <property>instrumentation/gs/in-range</property>
        </not>
       </and>        
    </condition>
  </animation>
  

<!--NAV Flag-->
  <animation>
    <type>select</type>
    <object-name>NAV</object-name>
    <condition>
       <equals>
        <property>instrumentation/steer-mode</property>
        <value>3</value>
       </equals>
    </condition>
  </animation>

<!--TCN Flag-->
  <animation>
    <type>select</type>
    <object-name>TCN</object-name>
    <condition>
       <equals>
        <property>instrumentation/steer-mode</property>
        <value>2</value>
       </equals>
    </condition>
  </animation>



<!--llz Flag-->
  <animation>
    <type>select</type>
    <object-name>ILS</object-name>
    <condition>
       <less-than>
        <property>instrumentation/steer-mode</property>
        <value>1.1</value>
       </less-than>
    </condition>
  </animation>



<!-- dme distance digital display -->
  <animation>
    <type>textranslate</type>
    <object-name>miles-drum-1</object-name>
    <property>instrumentation/dme/indicated-distance-nm</property>
    <factor>0.1</factor>
    <offset>-1</offset>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>


  <animation>
    <type>textranslate</type>
    <object-name>miles-drum-2</object-name>
    <property>instrumentation/dme/indicated-distance-nm</property>
    <factor>0.01</factor>
    <offset>-10</offset>
    <step>10</step>
    <scroll>0.5</scroll>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>


  <animation>
    <type>textranslate</type>
    <object-name>miles-drum-3</object-name>
    <property>instrumentation/dme/indicated-distance-nm</property>
    <factor>0.001</factor>
    <offset>-100</offset>
    <step>100</step>
    <scroll>0.5</scroll>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

<!-- course digital display -->
  <animation>
    <type>textranslate</type>
    <object-name>course-drum-1</object-name>
 
    <property>instrumentation/nav/radials/selected-deg</property>
    
