<?xml version="1.0"?>
<PropertyList> 
	<path>chronograph.ac</path>

	<animation> 
		<type>rotate</type>
		<object-name>HourHand</object-name>
		<property>instrumentation/clock/indicated-sec</property>
		<factor>0.00833333333333333</factor>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation> 
		<type>rotate</type>
		<object-name>MinuteHand</object-name>
		<property>instrumentation/clock/indicated-sec</property>
		<factor>0.1</factor>
		<axis> 
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


	<!-- lighting -->
	<animation> 
		<object-name>mount_0</object-name>
                <object-name>knob</object-name>
                <object-name>button</object-name>
		<type>material</type>
		<emission> 
			<factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
			<red>0.5</red>
			<green>0.2</green>
			<blue>0.2</blue>
		</emission>
	</animation>

	<animation>
                <object-name>disk</object-name>
                <object-name>MinuteHand</object-name>
                <object-name>HourHand</object-name>
                <object-name>mount_1</object-name> 
		<type>material</type>
		<emission> 
			<factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.0</blue>
		</emission>
	</animation>


	<!--  LoD  -->
	<animation> 
		<type>range</type>
		<min-m>0</min-m>
		<max-m>10</max-m>
	</animation>
</PropertyList>
