<?xml version="1.0"?>

<PropertyList>

 <path>power.ac</path>

 <animation>
  <type>translate</type>
  <object-name>lever0</object-name>
  <object-name>spbk-switch</object-name>
  <object-name>spbk-opn</object-name>
  <object-name>spbk-cls</object-name>
  <object-name>finger-lift</object-name>
  <property>controls/engines/engine/throttle</property>
  <interpolation>
   <entry><ind> 0 </ind><dep>0</dep></entry>
   <entry><ind> 0.5 </ind><dep>0.07</dep></entry>
   <entry><ind> 1 </ind><dep>0.14</dep></entry>
  </interpolation>
  <axis>
   <x> -1 </x>
   <y> 0 </y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>lever1</object-name>
  <object-name>finger-lift1</object-name>
  <property>controls/engines/engine[1]/throttle</property>
  <interpolation>
   <entry><ind> 0 </ind><dep>0</dep></entry>
   <entry><ind> 0.5 </ind><dep>0.07</dep></entry>
   <entry><ind> 1 </ind><dep>0.14</dep></entry>
  </interpolation>
  <axis>
   <x> -1 </x>
   <y> 0 </y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>spbk-switch</object-name>
  <property>controls/flight/speedbrake</property>
  <interpolation>
   <entry><ind> 0 </ind><dep>-0.01</dep></entry>
   <entry><ind> 0.5 </ind><dep>0.0</dep></entry>
   <entry><ind> 1 </ind><dep>0.01</dep></entry>
  </interpolation>
  <axis>
   <x> 1 </x>
   <y> 0 </y>
   <z> 0</z>
  </axis>
 </animation>

    <animation>
        <type>pick</type>
        <object-name>spbk-opn</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/speedbrake</property>
                <step>0.25</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>spbk-cls</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/speedbrake</property>
                <step>-0.25</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lever0</object-name>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/throttle</property>
                <step>0.1</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lever0</object-name>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/throttle</property>
                <step>-0.1</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lever1</object-name>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine[1]/throttle</property>
                <step>0.1</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lever1</object-name>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine[1]/throttle</property>
                <step>-0.1</step>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
    </animation>

<!-- lighting -->

  <animation>
  <object-name>lever0</object-name>
  <object-name>lever1</object-name>
  <object-name>spbk-switch</object-name>
  <object-name>base</object-name>
  <object-name>slot</object-name>
  <object-name>finger-lift</object-name>
  <object-name>finger-lift1</object-name>
  <object-name>fric</object-name>
<object-name>condition</object-name>
   <type>material</type>
     <emission> 
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
        <red>0.5</red>
        <green>0.2</green>
        <blue>0.2</blue>
      </emission>
  </animation>

<!--  engine[0] starter -->


  <animation>
    <type>translate</type>
    <object-name>finger-lift</object-name>
    <property>controls/engines/engine/starter</property>
    <factor>0.02</factor>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
  </animation>

<!--  engine[1] starter -->


  <animation>
    <type>translate</type>
    <object-name>finger-lift1</object-name>
    <property>controls/engines/engine[1]/starter</property>
    <factor>0.02</factor>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
  </animation>

<!-- friction -->
 <animation>
  <type>translate</type>
  <object-name>fric</object-name>
  <property>instrumentation/fric-knob</property>
  <interpolation>
   <entry><ind>0.01</ind><dep>0.12</dep></entry>
   <entry><ind>0.05</ind><dep>0.06</dep></entry>
   <entry><ind>0.1</ind><dep>0.0</dep></entry>
  </interpolation>
  <axis>
   <x> -1 </x>
   <y> 0 </y>
   <z> 0</z>
  </axis>
 </animation>


    <animation>
        <type>pick</type>
        <object-name>fric</object-name>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/fric-knob</property>
                <step>0.01</step>
                <min>0.01</min>
                <max>0.1</max>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>fric</object-name>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/fric-knob</property>
                <step>-0.01</step>
                <min>0.01</min>
                <max>0.1</max>
            </binding>
        </action>
    </animation>

</PropertyList>





