 <animation>
  <type>textranslate</type>
  <object-name>drum-inhg-2</object-name>
  <property>instrumentation/altimeter/setting-inhg</property>
  <factor>1</factor>
  <offset>-0.1</offset>
  <step>0.1</step>
  <scroll>0.01</scroll>
  <center>
   <x-m>0</x-m>
