 <animation>
  <type>textranslate</type>
  <object-name>drum-inhg-3</object-name>
  <property>instrumentation/altimeter/setting-inhg</property>
  <factor>0.1</factor>
  <offset>-1</offset>
  <step>1</step>
  <scroll>0.01</scroll>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
